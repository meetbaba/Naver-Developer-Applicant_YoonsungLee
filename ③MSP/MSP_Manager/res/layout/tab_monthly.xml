<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#696969"
    tools:context="com.msp_manager.Tab_Monthly" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#696969"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_big_menu_skyblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월별 통계 보기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="25sp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/style_basic_menu_violet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="날 짜 : " />

                <TextView
                    android:id="@+id/TabMonthly_txtView_date"
                    style="@style/style_basic_menu_greenyellow"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#8B795E"
                    android:text="월 선택" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TabMonthly_linearlayout_graph_success"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_marginTop="10sp"
            android:background="#696969"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TabMonthly_linearlayout_graph_fail"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_marginTop="20sp"
            android:background="#696969"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>