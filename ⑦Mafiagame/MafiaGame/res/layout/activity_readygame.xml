<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#696969"
    tools:context="com.mafiagame.Ac_ReadyGame">
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:gravity="center_vertical">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_weight="1"
            android:gravity="left|center_vertical"
>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름:"
                style="@style/style_small_menu_hotpink"
                android:layout_gravity="center_vertical"/>
            
            <TextView 
                android:id="@+id/ReadyGame_txtview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                style="@style/style_small_menu_hotpink"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_weight="3"
            android:paddingLeft="10sp"
            android:gravity="center_horizontal">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참가자 리스트"
                android:layout_gravity="center_horizontal"
                style="@style/style_big_menu_yellow"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_weight="1">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="         "
                android:layout_gravity="center_horizontal"/>
           
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
       	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:baselineAligned="false"
        android:paddingTop="20sp">
        
        <GridLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:rowCount="2"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user01_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_basic_menu_skyblue"
                    android:gravity="center_horizontal"/>
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user01_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_small_menu_white"
                    android:gravity="center_horizontal"/>
                
                <RadioButton 
                    android:id="@+id/ReadyGame_radio_user01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user02_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_basic_menu_skyblue"
                    android:gravity="center_horizontal"/>
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user02_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_small_menu_white"
                    android:gravity="center_horizontal"/>
                
                <RadioButton 
                    android:id="@+id/ReadyGame_radio_user02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user03_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_basic_menu_skyblue"
                    android:gravity="center_horizontal"
                    />
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user03_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_small_menu_white"
                    android:gravity="center_horizontal"/>
                
                <RadioButton 
                    android:id="@+id/ReadyGame_radio_user03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user04_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_basic_menu_skyblue"
                    android:gravity="center_horizontal"/>
                
                <TextView 
                    android:id="@+id/ReadyGame_txtView_user04_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/style_small_menu_white"
                    android:gravity="center_horizontal"/>
                
                <RadioButton 
                    android:id="@+id/ReadyGame_radio_user04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
                
            </LinearLayout>
            
        </GridLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:paddingLeft="15sp"
           	android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/ReadyGame_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작" />
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="30sp">
        
        <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_basic_menu_skyblue"
                android:text="인원 수  : "/>
        
        <TextView
            	android:id="@+id/ReadyGame_txtView_num_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_basic_menu_yellow"/>
        
        
    </LinearLayout>
    
    
</LinearLayout>